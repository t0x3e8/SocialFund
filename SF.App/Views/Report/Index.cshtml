@model System.Collections.Generic.IEnumerable<SF.App.Models.ViewModels.ReportIndexViewModel>

<div class="row">
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="mr-5">Oświadczenie o dochodach</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-area="" asp-controller="Report" asp-action="FamilyIncome">
                <span class="float-left">Wypełnij formularz</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="mr-5">Tymczasowy wniosek</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-area="" asp-controller="Reports" asp-action="Index">
                <span class="float-left">Zobacz szczegóły</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header">Historia złożonych wniosków</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Tytył wniosku</th>
                            <th>Data przesłania</th>
                            <th>Status</th>
                            <th>Odnośnik to wniosku</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach(var rep in Model) {
                            <tr>
                            <td>@rep.ReportName</td>
                            <td>@rep.SubmissionDate</td>
                            <td>@rep.Status</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>