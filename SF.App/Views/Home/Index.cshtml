@model SF.App.Models.ViewModels.HomeIndexViewModel

@if(!Model.IsModelEmpty) {
    <div class="row">
        <div class="card col-md-6 mx-auto mt-8 px-0">
        <div class="card-header">Dane pracownika</div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <label for="id">Identyfikator pracownika</label>
                            <input class="form-control " id="id" type="text" asp-for="EmployeeId" disabled />
                        </div>
                    </div>
                </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="name">Imię</label>
                        <input class="form-control" id="name" type="text" asp-for="Name" />
                    </div>
                    <div class="col-md-6">
                        <label for="lastName">Nazwisko</label>
                        <input class="form-control" id="lastName" type="text" asp-for="Surname" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="department">Dział</label>
                        <input class="form-control" id="department" type="text" asp-for="Department" />
                    </div>
                    <div class="col-md-6">
                        <label for="directManager">Przełożony</label>
                        <input class="form-control" id="directManager" type="text" asp-for="DirectManager" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="hiredDate">Data zatrudnienia</label>
                        <input class="form-control" id="hiredDate" type="text" asp-for="HiredDate" />
                    </div>          
                    <div class="col-md-6">
                        <label for="email">Adress email</label>
                        <input class="form-control" id="email" type="Email" asp-for="Email" />
                    </div>
                </div>
            </div>
            <a class="btn btn-primary btn-block" href="">Zapisz wprowadzone zmiany</a>
            </form>
        </div>
        </div>
    </div>
}
else 
{
    <H1>Brak danych w bazie danych ZFŚS</H1>
    <p>W bazie danych systemu ZFŚS brakuje dodatkowych informacji. <a>Zgłoś problem</a></p>
}

